{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cashier-app",
  "version": "0.1.0",
  "identifier": "com.azhura.cashier-app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "fullscreen": false,
        "resizable": true,
        "title": "Cashier App",
        "visible": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
